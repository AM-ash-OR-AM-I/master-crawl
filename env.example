# Server
PORT=3001
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sitemap_generator
DB_USER=postgres
DB_PASSWORD=postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# OpenAI (use either standard OpenAI or Azure OpenAI, not both)
# Standard OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Azure OpenAI Configuration (optional - if set, will use Azure instead of standard OpenAI)
# AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
# AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Crawler
# Number of concurrent browser instances (jobs) that can run simultaneously
# Each browser instance processes pages in parallel
CRAWL_CONCURRENCY=3

# Number of pages processed concurrently per browser instance
# Higher = faster crawling but more memory per browser
# Recommended for 8GB VM: 8-10 (with 3 browser instances = 24-30 total concurrent pages)
# Memory estimate: ~150MB per page + ~300MB per browser instance
PAGES_CONCURRENCY=8

